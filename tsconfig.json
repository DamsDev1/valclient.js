{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "src",
        "module": "ES2020",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "rootDir": "src",
        "outDir": "dist/esm",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "@utils": ["./utils"],
            "@utils/*": ["./utils/*"],
            "@resources": ["./resources"],
            "@resources/*": ["./resources/*"],
            "@errors/*": ["./errors/*"],
            "@interfaces/*": ["./interfaces/*"],
            "@app/*": ["./*"]
        },
        "plugins": [
            {
                "transform": "@zerollup/ts-transform-paths"
            }
        ]
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "include": ["src/**/*.ts"],
    "exclude": ["__tests__/**/*.test.ts", "node_modules"]
}
