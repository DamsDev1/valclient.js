{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "src",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "outDir": "build",
        "paths": {
            "@utils": ["./utils"],
            "@utils/*": ["./utils/*"],
            "@resources": ["./resources"],
            "@resources/*": ["./resources/*"],
            "@errors/*": ["./errors/*"],
        }
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
}
